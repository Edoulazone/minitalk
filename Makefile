NAME = minitalk

SERVER = server
CLIENT = client

CFLAGS = -Wall -Werror -Wextra
CC = gcc
RM = rm -rf

all:	$(NAME) 
	@echo "                                                                       "
	@echo "\033[95;1m 	▄▄   ▄▄ ▄▄▄ ▄▄    ▄ ▄▄▄ ▄▄▄▄▄▄▄ ▄▄▄▄▄▄ ▄▄▄     ▄▄▄   ▄▄   "
	@echo "\033[95;1m 	█  █▄█  █   █  █  █ █   █       █      █   █   █   █ █ █  "
	@echo "\033[95;1m 	█       █   █   █▄█ █   █▄     ▄█  ▄   █   █   █   █▄█ █  "
	@echo "\033[95;1m 	█       █   █       █   █ █   █ █ █▄█  █   █   █      ▄█  "
	@echo "\033[95;1m 	█       █   █  ▄    █   █ █   █ █      █   █▄▄▄█     █▄   "
	@echo "\033[95;1m 	█ ██▄██ █   █ █ █   █   █ █   █ █  ▄   █       █    ▄  █  "
	@echo "\033[95;1m 	█▄█   █▄█▄▄▄█▄█  █▄▄█▄▄▄█ █▄▄▄█ █▄█ █▄▄█▄▄▄▄▄▄▄█▄▄▄█ █▄█  "
	@echo "                                                                       "

$(NAME):	$(SERVER) $(CLIENT)

$(SERVER):	$(SERVER).c minitalk.h
			@$(CC) $(CFLAGS) -o $(SERVER) $(SERVER).c

$(CLIENT):	$(CLIENT).c minitalk.h
			@$(CC) $(CFLAGS) -o $(CLIENT) $(CLIENT).c

clean:
	@$(RM) $(SERVER) $(CLIENT)
	@echo "It's a clean!                        "
	@echo "\033[95;1m	            ▓▓▓▓▓▓▓▓▓▓▓▓▓▓▓             "
	@echo "\033[95;1m	          ▓▓▓▓▓▓▓▓▓▒▒▒▒███▓▓▓▓▓▓▓▓        "
	@echo "\033[95;1m		██▒▒████▒▒▒▒▒▒▒███▒▒▒           "
	@echo "\033[95;1m		██▒▒▒█████▒▒▒▒▒▒▒▒██▒▒▒▒▒▒▒▒    "
	@echo "\033[95;1m		█████▒▒▒▒▒▒▒▒▒▒███████████      "
	@echo "\033[95;1m		     ▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒▒          "
	@echo "\033[95;1m     	          █████▓▓██████▓▓██           "
	@echo "\033[95;1m	       ████████▓▓██████▓▓███████       "
	@echo "\033[95;1m	    ███████████▓▓██████▓▓██████████     "
	@echo "\033[95;1m	    ▒▒▒▒▒▓█████▓▓▓▓▓▓▓▓▓▓█████▒▒▒▒▒     "
	@echo "\033[95;1m	    ▒▒▒▒▒▒▒▓▓▓░░▓▓▓▓▓▓▓░░▓▓▓▒▒▒▒▒▒▒     "
	@echo "\033[95;1m	         ▓▓▓▓▓▓▓▓     ▓▓▓▓▓▓▓▓           "
	@echo "\033[95;1m	       ███████           ███████       "
	@echo "\033[95;1m	    ██████████           ██████████     "
	@echo "                                     "

fclean: clean
	@echo "                         "
	@echo "  (        ) )  (   (      "
	@echo " ()) (   ((\(   )\  (\    "
	@echo "(_)())\  )\)(| ((_) (\   "
	@echo "| _ )( )(_)()\((_))(( )  "
	@echo "| _ \ '_| | -_) || | _|  "
	@echo "|___/_| |_|___|\_._|__|  "
	@echo "                         "

re: fclean all

.PHONY:	all clean fclean re